<?xml version="1.0" encoding="utf-8"?>
<!-- Needs to be a border because of an open issue regarding rendering BoxView on iOS devices. https://github.com/dotnet/maui/issues/18587 -->
<!-- The HeightRequest must be 1.1 else the border will not render on iOS devices. -->
<Border xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="MemoryLeakTestApp.Views.Divider"
        HeightRequest="1.1"
        HorizontalOptions="Fill"
        Margin="16,0"
        StrokeThickness="1"/>